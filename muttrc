set mbox_type   = Maildir
set sendmail    = /usr/bin/msmtp

unset record

source ~/.mutt/micarga

folder-hook micarga/* source ~/.mutt/micarga
folder-hook mheroin/* source ~/.mutt/mheroin
folder-hook gmail/* source ~/.mutt/gmail

macro index <F2>  "<change-folder> =../micarga/INBOX<enter>"  "micarga"
macro index <F3>  "<change-folder> =../mheroin/INBOX<enter>"  "mheroin"
macro index <F4>  "<change-folder> =../gmail/INBOX<enter>"  "gmail"

mailboxes +INBOX

macro index S \
    "<save-message>+[Gmail]/Spam<enter>" \
    "mark message as spam"

macro index a \
    "<save-message>+[Gmail]/Spam<enter>" \
    "mark message as spam"


# main options
set realname   = "Federico Builes"
set from       = "federico@micarga.com"
alternates federico@mheroin.com federico@micarga.com
set mail_check = 0
set envelope_from

unset move
set delete
unset confirmappend
set quit
unset mark_old

# sort/threading
set sort     = threads
set sort_aux = last-date-received
set sort_re

# composing
set fcc_attach
unset mime_forward
set forward_format = "Fwd: %s"
set include
set forward_quote

macro index,pager a "<save-message>=[Gmail]/All Mail<enter><enter>" "Archive"

ignore *
unignore from: to: cc: date: subject:
hdr_order from: to: cc: date: subject:


