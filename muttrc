set mbox_type   = Maildir
set sendmail    = /usr/bin/msmtp

unset record
unset markers
source ~/.mutt/micarga

folder-hook micarga/* source ~/.mutt/micarga
folder-hook mheroin/* source ~/.mutt/mheroin
folder-hook gmail/* source ~/.mutt/gmail

macro index <F1>  "<change-folder> =../micarga/INBOX<enter>"  "micarga"
macro index <F2>  "<change-folder> =../mheroin/INBOX<enter>"  "mheroin"
macro index <F3>  "<change-folder> =../gmail/INBOX<enter>"  "gmail"

mailboxes +INBOX "=mu-search"

# main options
set realname   = "Federico Builes"
set from       = "federico@micarga.com"
alternates federico@mheroin.com federico@micarga.com
set mail_check = 0
set envelope_from

unset move           # gmail does that
set delete           # don't ask, just do
unset confirmappend  # don't ask, just do!
set quit             # don't ask, just do!!
unset mark_old       # read/new is good enough for me

# sort/threading
set sort     = threads
set sort_aux = last-date-received
set sort_re

# composing
set fcc_attach
unset mime_forward
set forward_format = "Fwd: %s"
set include
set forward_quote
unset metoo
unset reply_self
set fast_reply

macro index,pager a "<save-message>=[Gmail]/All Mail<enter><enter>" "Archive"

ignore *                               # first, ignore all headers
unignore from: to: cc: date: subject:  # then, show only these
hdr_order from: to: cc: date: subject: # and in this order

# search
macro index "\Cs" "<enter-command>unset wait_key<enter><shell-escape>read -p'Query: ' x; \
      mu find --clearlinks --linksdir ~/Mail/mu-search --format links \$x<enter>\
      <change-folder-readonly>~/Mail/mu-search\n" "mu find"
macro index "<Esc>s" "<change-folder-readonly>~/Mail/mu-search\n" "display mu-find results"


